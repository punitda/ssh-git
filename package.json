{
  "name": "ssh-git",
  "productName": "ssh-git",
  "version": "0.0.1",
  "description": "Electron app used to generate, add and manage ssh keys for using git with dev platforms like Github/Bitbucket/Gitlab, etc.",
  "repository": "https://github.com/punitda/ssh-git-electron-app.git",
  "author": "punitdama <punitdama@gmail.com>",
  "main": "src/main/index.js",
  "scripts": {
    "start": "concurrently \"yarn react-start\" \"wait-on http://localhost:3000 && electron . \"",
    "build": "yarn build-css && yarn react-build && yarn electron-build",
    "release": "yarn build-css && yarn react-build && yarn electron-release",
    "react-start": "yarn build-css && parcel -p 3000 public/index.html",
    "react-build": "parcel build public/index.html --out-dir build --public-url ./",
    "electron-release": "electron-builder --config electron-builder.json --publish always",
    "electron-build": "electron-builder --config electron-builder.json",
    "build-css": "postcss public/tailwind.css -o public/build/tailwind.css",
    "watch-css": "postcss public/tailwind.css -o public/build/tailwind.css --watch",
    "clean": "rm -rf build/ .cache dist/ public/build",
    "rebuild-node-pty": "electron-rebuild -f -w node-pty"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@rauschma/stringio": "^1.4.0",
    "@reach/router": "^1.2.1",
    "axios": "^0.19.0",
    "electron-better-ipc": "^0.6.0",
    "node-pty": "^0.8.1",
    "query-string": "^6.8.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-spinners": "^0.5.13",
    "ssh-config": "^2.0.0-beta.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@svgr/parcel-plugin-svgr": "^4.3.2",
    "autoprefixer": "^9.6.1",
    "concurrently": "^4.1.1",
    "electron": "^5.0.7",
    "electron-builder": "^22.1.0",
    "electron-rebuild": "^1.8.6",
    "lodash": "^4.17.14",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-asset-copier": "^1.0.0",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.0.5",
    "wait-on": "^3.3.0"
  },
  "homepage": "./",
  "browserslist": [
    "electron 5.0"
  ],
  "assetsPath": "src/assets"
}
