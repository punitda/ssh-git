{
  "name": "ssh-git",
  "productName": "ssh-git",
  "version": "0.0.1",
  "description": "Electron app used to generate, add and manage ssh keys for using git with dev platforms like Github/Bitbucket/Gitlab, etc.",
  "main": "src/main/index.js",
  "scripts": {
    "start": "yarn build-css && concurrently \"yarn react-start\" \"wait-on http://localhost:3000 && electron . \"",
    "clean-start": "yarn clean && yarn start",
    "build-all": "yarn clean && yarn build-css && yarn react-build && yarn electron-build",
    "build-mac": "yarn clean && yarn build-css && yarn react-build && yarn electron-build-mac",
    "react-start": "parcel -p 3000 public/index.html",
    "build-css": "postcss public/tailwind.css -o public/build/tailwind.css",
    "watch-css": "postcss public/tailwind.css -o public/build/tailwind.css --watch",
    "react-build": "parcel build public/index.html --out-dir build --public-url ./",
    "electron-build-all": "electron-builder -mwl",
    "electron-build-mac": "electron-builder",
    "clean": "rm -rf build/ .cache dist/ public/build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@rauschma/stringio": "^1.4.0",
    "@reach/router": "^1.2.1",
    "axios": "^0.19.0",
    "query-string": "^6.8.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-spinners": "^0.5.13",
    "ssh-config": "^2.0.0-beta.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@svgr/parcel-plugin-svgr": "^4.3.2",
    "autoprefixer": "^9.6.1",
    "concurrently": "^4.1.1",
    "electron": "^5.0.7",
    "electron-builder": "^21.0.15",
    "lodash": "^4.17.14",
    "parcel-bundler": "^1.12.3",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.0.5",
    "wait-on": "^3.3.0"
  },
  "build": {
    "appId": "dev.punitd.ssh-git",
    "files": [
      "src/main/**/*",
      "src/lib/**/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    },
    "protocols": {
      "name": "app-protocol",
      "schemes": [
        "ssh-git"
      ]
    }
  },
  "homepage": "./",
  "browserslist": [
    "electron 5.0"
  ]
}
