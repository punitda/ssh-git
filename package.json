{
  "name": "ssh-git",
  "productName": "ssh-git",
  "version": "0.0.1",
  "description": "Electron app used to generate, add and manage ssh keys for using git with dev platforms like Github/Bitbucket/Gitlab, etc.",
  "main": "src/main/electron.js",
  "scripts": {
    "react-start": "parcel -p 3000 public/index.html",
    "watch-css": "postcss src/assets/css/tailwind.css -o public/tailwind.css --watch",
    "start": "concurrently \"yarn watch-css\" \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron . \"",
    "react-build": "parcel build public/index.html --out-dir build --public-url ./",
    "build-css": "postcss src/assets/css/tailwind.css -o public/tailwind.css ",
    "electron-build": "electron-builder -mwl",
    "electron-build-mac": "electron-builder",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "yarn clean-build && yarn build-css && yarn react-build && yarn electron-build",
    "build:mac": "yarn clean-build && yarn build-css && yarn react-build && yarn electron-build-mac"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@reach/router": "^1.2.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@svgr/parcel-plugin-svgr": "^4.3.2",
    "autoprefixer": "^9.6.1",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "electron": "^5.0.7",
    "electron-builder": "^21.0.15",
    "lodash": "^4.17.14",
    "parcel-bundler": "^1.12.3",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.0.5",
    "wait-on": "^3.3.0"
  },
  "build": {
    "appId": "dev.punitd.ssh-git",
    "files": [
      "src/main/**/*",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    },
    "protocols": {
      "name": "app-protocol",
      "schemes": [
        "ssh-git"
      ]
    }
  },
  "homepage": "./"
}
